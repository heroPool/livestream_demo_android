<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_finish_confirmed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingBottom="13dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="13dp"
            android:src="@drawable/live_close" />

        <com.hyphenate.easeui.widget.EaseImageView
            android:id="@+id/image_finish_avatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/ease_default_avatar" />

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="username"
            android:textColor="@color/common_white"
            android:textSize="18sp" />

        <TextView
            style="@style/LiveEndTextStyle"
            android:layout_marginTop="32dp"
            android:text="直播已暂停"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txt_watched_count"
            style="@style/LiveEndTextStyle"
            android:layout_marginTop="8dp"
            android:text="0人看过" />


    </LinearLayout>

    <Button
        android:id="@+id/live_close_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_normal_height"
        android:layout_margin="36dp"
        android:layout_weight="0"
        android:background="@drawable/common_blue_btn_bg"
        android:text="继续直播"
        android:textColor="@color/common_white"
        android:textSize="18sp" />


</LinearLayout>